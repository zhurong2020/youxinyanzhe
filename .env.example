# 🔒 环境变量配置模板
# 复制此文件为 .env 并填入您的实际配置值
# 重要：不要使用这里的示例值！

# ===================
# 🤖 AI 服务配置
# ===================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# 通义千问 API
QWEN_API_KEY=sk-your-qwen-api-key-here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Kimi API
KIMI_API_KEY=sk-your-kimi-api-key-here
KIMI_BASE_URL=https://api.moonshot.cn/v1

# Google Gemini API
GOOGLE_API_KEY=your-google-api-key-here

# ===================
# 📺 YouTube 服务配置
# ===================

# YouTube Data API
YOUTUBE_API_KEY=AIza-your-youtube-api-key-here

# ElevenLabs TTS API
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ===================
# 📧 邮件服务配置
# ===================

# SMTP 邮件服务器配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Gmail 应用专用密码设置说明：
# 1. 启用两步验证
# 2. 生成应用专用密码：https://myaccount.google.com/apppasswords
# 3. 使用应用专用密码作为 EMAIL_PASSWORD

# 其他邮件服务商配置示例：
# QQ邮箱：SMTP_SERVER=smtp.qq.com, SMTP_PORT=587
# 163邮箱：SMTP_SERVER=smtp.163.com, SMTP_PORT=587
# 腾讯企业邮箱：SMTP_SERVER=smtp.exmail.qq.com, SMTP_PORT=587

# ===================
# 🔐 会员系统配置
# ===================

# 管理员邮箱（接收新会员通知）
ADMIN_EMAIL=admin@your-domain.com

# 会员数据库路径（可选，默认使用文件存储）
MEMBER_DATABASE_PATH=data/members.json

# ===================
# 🧪 开发测试验证码
# ===================

# 管理员测试验证码（用于开发和测试，生产环境请删除）
# 格式: LEVEL_EXPIRY_RANDOM (EXPIRY格式: YYYYMMDD)

# 管理员验证码 - 永不过期，用于系统管理
TEST_ADMIN_CODE=ADMIN_20991231_TESTMGR

# 体验会员测试码（7天有效期）
TEST_VIP1_CODE=VIP1_20250820_TESTVP1

# 月度会员测试码（30天有效期）  
TEST_VIP2_CODE=VIP2_20250905_TESTVP2

# 季度会员测试码（90天有效期）
TEST_VIP3_CODE=VIP3_20251104_TESTVP3

# 年度会员测试码（365天有效期）
TEST_VIP4_CODE=VIP4_20250806_TESTVP4

# 注意：这些测试验证码仅用于开发测试目的
# 生产环境部署前请：
# 1. 删除或注释这些测试验证码
# 2. 使用正式的会员管理系统生成真实验证码
# 3. 确保.env文件不被提交到版本控制

# ===================
# 📊 分析和统计
# ===================

# Google Analytics 4 测量ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# 启用会员行为跟踪
ENABLE_MEMBER_ANALYTICS=true

# ===================
# 🔧 系统配置
# ===================

# 调试模式
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 项目基础URL（用于生成链接）
BASE_URL=https://your-domain.com

# ===================
# 📱 微信公众号配置
# ===================

# 微信公众号配置
WECHAT_APPID=your-wechat-appid
WECHAT_APPSECRET=your-wechat-appsecret

# ===================
# 🌍 WordPress 配置
# ===================

# WordPress 站点配置
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-username
WORDPRESS_PASSWORD=your-app-password

# ===================
# ⚠️ 安全提醒
# ===================

# 1. 永远不要提交包含真实密钥的 .env 文件
# 2. 定期轮换所有 API 密钥和访问码
# 3. 使用强密码和应用专用密码
# 4. 限制 API 密钥的访问权限和 IP 范围
# 5. 定期检查 API 使用量和异常活动